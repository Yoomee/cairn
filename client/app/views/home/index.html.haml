-content_for :head do
  :javascript
    $(document).ready(function(){
      $('.cycle').cycle({
        fx: 'scrollHorz',
        speed: 'slow',
        timeout: 8000,
        easing: 'easeOutQuint',
        pager: '.cycle_nav',
        next: '.cycle_next',
        prev: '.cycle_prev'
      });
    });
.big_message
  .big_message_left
    %h1
      We are an online community that inspires people to lead a greener life.
    %p
      With the help of brilliant videos and inspiring stories from creative people and community members around the world. Join people from 205 countries doing their green things and making a difference. 
      = link_to 'More about us here', {:controller => 'page', :action => 'show', :id => '2'}, :class => 'read_more'
  
  #big_message_right.cycle_frame
    .cycle
      %div
        =image_tag 'photo.jpg'
      %div
        =image_tag 'photo_2.jpg'
    .cycle_nav
      =link_to 'Next', '#', :class => 'cycle_next'
        
        
#events.home_bx.bx
  .bx_h
    %h2
      Events
    =link_to 'View all', calendar_path, :class => "more"
  .bx_in
    %ul.bx_lst
      =event_list(@events)
