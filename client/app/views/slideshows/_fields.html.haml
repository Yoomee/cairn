-form.inputs :id => "slideshow_item_forms" do
  -form.object.slideshow_items.each do |slideshow_item|
    =render("slideshow_items/form", :slideshow_form => form, :slideshow_item => slideshow_item)
.add_slide_link
  =link_to_function("Add slide &darr;", "SlideshowForm.addSlideshowItem()")
:javascript
  SlideshowForm.formHtml = "#{escape_javascript(render("slideshow_items/form", :slideshow_form => form, :slideshow_item => form.object.slideshow_items.build))}";